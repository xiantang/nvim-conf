-- neovim Script-User Defined Commands



-- 1. FastMind "FM" commands
vim.api.nvim_create_user_command("FM", function(opts)
  -- read from the arguments
  -- <q-args>
  -- print(string.upper(opts.args))
  local args = opts.args

  -- apeend this arg to the top of ~/note.md
  -- sholud be first line of the file
  -- sed  -i '1i new_text' file_name
  local cmd = string.format("!sed -i '1i %s' ~/note.md", args)
  vim.cmd(cmd)


end, {})
