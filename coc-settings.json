{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"]
    },
    "lua": {
      "command": "lua-language-server",
      "args": ["-E", "/opt/homebrew/Cellar/lua-language-server/3.5.6/libexec/main.lua"],
      "filetypes": ["lua"],
      "settings":{
        "Lua":{
          "workspace.library":{
            "/opt/homebrew/Cellar/neovim/0.8.0/share/nvim/runtime/lua":true,
            "/opt/homebrew/Cellar/neovim/0.8.0/share/nvim/runtime/lua/vim/lsp":true,
            "/opt/homebrew/Cellar/neovim/0.8.0/share/nvim/runtime/lua/vim":true
          },
          "diagnostics":{
            "globals":["vim"]
          }
        }
      }
    }
  }
}

